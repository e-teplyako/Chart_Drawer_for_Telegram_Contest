<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charts_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_marginTop="30dp"
    android:paddingTop="2dp"
    android:paddingBottom="12dp">

    <com.teplyakova.april.telegramcontest.UI.ThemedTextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:textStyle="bold"
        android:fontFamily="Roboto"/>

    <com.teplyakova.april.telegramcontest.UI.RangeTextView
        android:id="@+id/rangeTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="4dp" />

    <com.teplyakova.april.telegramcontest.UI.ChartView
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <com.teplyakova.april.telegramcontest.UI.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"/>

    <GridLayout
        android:id="@+id/checkboxes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:useDefaultMargins="true"
        android:columnCount="4"/>

</LinearLayout>