<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charts_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <com.teplyakova.april.telegramcontest.UI.RangeTextView
        android:id="@+id/rangeTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="4dp" />

    <com.teplyakova.april.telegramcontest.UI.ChartView
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/checkboxes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:useDefaultMargins="true"
        android:columnCount="4"/>

    <com.teplyakova.april.telegramcontest.UI.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp"/>

</LinearLayout>