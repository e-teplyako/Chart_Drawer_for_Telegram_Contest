<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charts_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.teplyakova.april.telegramcontest.UI.RangeTextView
        android:id="@+id/rangeTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="4dp" />

    <com.teplyakova.april.telegramcontest.UI.ChartView
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingBottom="4dp" />

    <GridLayout
        android:id="@+id/checkboxes_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="4dp"
        android:useDefaultMargins="true"
        android:columnCount="4">
    </GridLayout>

    <com.teplyakova.april.telegramcontest.UI.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp"/>

</LinearLayout>