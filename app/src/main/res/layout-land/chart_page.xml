<?xml version="1.0" encoding="utf-8"?>

<com.teplyakova.april.telegramcontest.UI.ChartLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charts_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.teplyakova.april.telegramcontest.UI.ThemedTextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:textStyle="bold"
        android:fontFamily="Roboto"/>

    <com.teplyakova.april.telegramcontest.UI.RangeTextView
        android:id="@+id/rangeTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="4dp" />

    <com.teplyakova.april.telegramcontest.UI.ChartView
        android:id="@+id/chartview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="7"
        android:paddingBottom="4dp" />

    <com.teplyakova.april.telegramcontest.UI.SliderView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="12dp"/>

    <GridLayout
        android:id="@+id/checkboxes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="4dp"
        android:useDefaultMargins="true"
        android:columnCount="4">
    </GridLayout>

</com.teplyakova.april.telegramcontest.UI.ChartLinearLayout>